class pendu extends Program{

    char[] motADeviner;
    

    public void saisir(){
	String rep = "";
	println("saisir un mot qu'il faudra deviner: ");
	rep = readString();
	motADeviner = new char[rep.length];
	for ( int idx = 0; idx < rep.length; idx++ ){
	    motADeviner[idx] = charAt(rep,idx);
	    println(motADeviner[idx]);
	}
    }






